<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fdfdfdfd">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/button"
        android:onClick="onButton1Clicked"
        android:src = "@drawable/red_wine_button"
        android:background = "@null"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:onClick="onButton2Clicked"
        android:src="@drawable/white_wine_button"
        android:background="@null"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/button3"
        android:onClick="onButton3Clicked"
        android:src="@drawable/wine_cellar_button"
        android:background="@null"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/button6"
        android:onClick="onButton6Clicked"
        android:src="@drawable/all_button"
        android:background="@null"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/button4"
        android:onClick="onButton4Clicked"
        android:src="@drawable/wine_search_button"
        android:background="@null"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
